# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
NODE_ENV=local||development||production
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_TYPE=mongodb

# Local MongoDB (Docker)
MONGODB_LOCAL_URI=mongodb://admin:wedding123@localhost:27017/wedwisely-db?authSource=admin

# Development MongoDB (Online Testing)
MONGODB_DEV_URI=mongodb+srv://username:password@cluster-dev.mongodb.net/myapp_dev?retryWrites=true&w=majority

# Production MongoDB (Final Users)
MONGODB_PROD_URI=mongodb+srv://username:password@cluster-prod.mongodb.net/myapp_prod?retryWrites=true&w=majority

# ========================================
# SERVER CONFIGURATION
# ========================================
# Local Development
LOCAL_HOST=0.0.0.0
LOCAL_PORT=3000

# Development Server
DEV_HOST=0.0.0.0
DEV_PORT=3000

# Production Server
PROD_HOST=0.0.0.0
PROD_PORT=3000

# ========================================
# CORS CONFIGURATION (Mobile + Web Apps)
# ========================================
# Local Development (Mobile + Web)
CORS_ORIGIN_LOCAL_WEB=http://localhost:3000
CORS_ORIGIN_LOCAL_MOBILE=http://192.168.1.100:3000

# Development (Online Testing)
CORS_ORIGIN_DEV_WEB=https://your-dev-web.com
CORS_ORIGIN_DEV_MOBILE=https://your-dev-mobile.com

# Production (Final Users)
CORS_ORIGIN_PROD_WEB=https://your-production-web.com
CORS_ORIGIN_PROD_MOBILE=https://your-production-mobile.com
CORS_ORIGIN_CDN=https://cdn.yourdomain.com

# ========================================
# SECURITY & FEATURES
# ========================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# ========================================
# EXTERNAL SERVICES (Future Use)
# ========================================
# Email Service
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Storage
STORAGE_TYPE=local||aws||gcp
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SuperSecurePassword123
ADMIN_NAME=Super Admin