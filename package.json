{
  "name": "nodejs-rest-api-boilerplate",
  "version": "1.0.0",
  "description": "A clean Node.js REST API boilerplate",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=local nodemon server.js",
    "dev:online": "cross-env NODE_ENV=development nodemon server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:status": "node scripts/db-status.js",
    "db:reset": "docker-compose down -v && docker-compose up -d"
  },
  "keywords": [
    "nodejs",
    "express",
    "rest-api",
    "boilerplate",
    "mongodb",
    "multi-environment"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
